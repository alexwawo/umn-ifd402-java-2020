<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
    fx:controller="week12.Controller">
   <children>
      <Label alignment="TOP_LEFT" contentDisplay="CENTER" text="CRUD Example" />
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="ID" />
            <Label text="Name" GridPane.rowIndex="1" />
            <Label text="Auth" GridPane.rowIndex="2" />
            <TextField fx:id="id_field" GridPane.columnIndex="1" />
            <TextField fx:id="name_field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="auth_field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
      </GridPane>
      <HBox>
         <children>
            <Button fx:id="addBtn" onAction="#handleAddButtonAct" text="Add" />
            <Button fx:id="delBtn" onAction="#handleDelButtonAct" text="Delete" />
            <Button fx:id="updateBtn" onAction="#handleUpdateButtonAct" text="Update" />
            <Button text="Show" onAction="#handleShowButtonAct" />
         </children>
      </HBox>
   </children>
</VBox>
