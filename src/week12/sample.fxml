<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="week12.Controller">
   <children>
      <Label alignment="TOP_LEFT" contentDisplay="CENTER" text="CRUD Example" />
      <GridPane>
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="NIM" />
            <Label text="Nama" GridPane.rowIndex="1" />
            <Label text="Prodi" GridPane.rowIndex="2" />
            <TextField fx:id="nim_field" GridPane.columnIndex="1" />
            <TextField fx:id="nama_field" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="prodi_field" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Jenis Kelamin" GridPane.rowIndex="3" />
            <RadioButton mnemonicParsing="false" text="RadioButton" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
      <HBox>
         <children>
            <Button onAction="#handleAddButtonAct" text="Add" />
            <Button onAction="#handleDelButtonAct" text="Delete" />
            <Button onAction="#handleUpdateButtonAct" text="Update" />
            <Button onAction="#handleShowButtonAct" text="Show" />
         </children>
      </HBox>
   </children>
</VBox>
